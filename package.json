{
  "name": "nathansimpson.design",
  "version": "0.4.0",
  "private": true,
  "description": "Nathans UX and Frontend Development portfolio site, built in React",
  "main": "index.js",
  "engines": {
    "node": ">=14.15.0"
  },
  "workspaces": [
    "website",
    "design-system/packages/*"
  ],
  "scripts": {
    "website": "yarn workspace @nathsimpson/website",
    "dev": "yarn website dev",
    "clean": "yarn website clean",
    "format": "prettier --write \"**/*.js{,on}\" \"**/*.md\"",
    "postinstall": "preconstruct dev && manypkg check",
    "types": "tsc --project tsconfig.json",
    "lint": "eslint ."
  },
  "author": "Nathan Simpson",
  "license": "ISC",
  "dependencies": {
    "@babel/cli": "^7.14.8",
    "@babel/core": "^7.16.0",
    "@babel/plugin-transform-runtime": "^7.15.0",
    "@babel/preset-env": "^7.15.0",
    "@babel/preset-react": "^7.14.5",
    "@babel/preset-typescript": "^7.15.0",
    "@emotion/core": "^10.0.6",
    "@emotion/styled": "^10.0.6",
    "@manypkg/cli": "^0.18.0",
    "@preconstruct/cli": "^2.1.1",
    "@types/facepaint": "^1.2.1",
    "@typescript-eslint/eslint-plugin": "^4.15.0",
    "@typescript-eslint/parser": "^4.15.0",
    "eslint": "^8.10.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-config-standard-react": "^11.0.1",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-react": "^7.29.3",
    "eslint-plugin-standard": "^5.0.0",
    "prettier": "^2.5.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "typescript": "^4.4.4"
  },
  "resolutions": {
    "remark": "11.0.2"
  },
  "preconstruct": {
    "packages": [
      "design-system/packages/*"
    ]
  }
}
