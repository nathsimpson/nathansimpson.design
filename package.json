{
  "name": "nathansimpson.design",
  "version": "0.4.0",
  "private": true,
  "description": "Nathans UX and Frontend Development portfolio site, built in React",
  "main": "index.js",
  "engines": {
    "node": ">=14.15.0"
  },
  "workspaces": [
    "website",
    "design-system/packages/*"
  ],
  "scripts": {
    "website": "yarn workspace @nathsimpson/website",
    "dev": "yarn website dev",
    "clean": "rimraf \"**/node_modules\" \"**/yarn-error.log\" \"**/out.log\" \"**/.DS_Store\" \"**/dist\" \"**/out\" \"**/.next\"",
    "format": "prettier --write \"**/*.js{,on}\" \"**/*.md{,x}\" \"**/*.ts{,x}\"",
    "postinstall": "preconstruct dev && manypkg check",
    "types": "tsc --project tsconfig.json",
    "lint": "eslint ."
  },
  "author": "Nathan Simpson",
  "license": "ISC",
  "dependencies": {
    "@babel/cli": "^7.14.8",
    "@babel/core": "^7.16.0",
    "@babel/plugin-transform-runtime": "^7.15.0",
    "@babel/preset-env": "^7.15.0",
    "@babel/preset-react": "^7.14.5",
    "@babel/preset-typescript": "^7.15.0",
    "@emotion/babel-preset-css-prop": "^11.2.0",
    "@emotion/core": "^10.0.6",
    "@emotion/eslint-plugin": "^11.7.0",
    "@emotion/styled": "^10.0.6",
    "@manypkg/cli": "^0.18.0",
    "@preconstruct/cli": "^2.1.1",
    "@types/facepaint": "^1.2.1",
    "@typescript-eslint/eslint-plugin": "^5.3.1",
    "@typescript-eslint/parser": "^5.3.1",
    "eslint": "^8.20.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.30.1",
    "prettier": "^2.5.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^4.7.4"
  },
  "resolutions": {
    "remark": "11.0.2"
  },
  "preconstruct": {
    "packages": [
      "design-system/packages/*"
    ]
  }
}
