{
  "name": "nathansimpson.design",
  "version": "0.4.0",
  "private": true,
  "description": "Nathans UX and Frontend Development portfolio site, built in React",
  "main": "index.js",
  "engines": {
    "node": ">=14.15.0"
  },
  "workspaces": [
    "website",
    "design-system/packages/*"
  ],
  "scripts": {
    "dev": "cd website && gatsby develop",
    "clean": "cd website && gatsby clean",
    "format": "prettier --write \"**/*.js{,on}\" \"**/*.md\"",
    "postinstall": "preconstruct dev && manypkg check",
    "types": "tsc --project tsconfig.json",
    "lint": "eslint ."
  },
  "author": "Nathan Simpson",
  "license": "ISC",
  "dependencies": {
    "@babel/cli": "^7.14.8",
    "@babel/core": "^7.15.0",
    "@babel/plugin-transform-runtime": "^7.15.0",
    "@babel/preset-env": "^7.15.0",
    "@babel/preset-react": "^7.14.5",
    "@babel/preset-typescript": "^7.15.0",
    "@emotion/core": "^10.0.6",
    "@emotion/styled": "^10.0.6",
    "@manypkg/cli": "^0.18.0",
    "@preconstruct/cli": "^2.1.1",
    "@types/facepaint": "^1.2.1",
    "@typescript-eslint/eslint-plugin": "^4.15.0",
    "@typescript-eslint/parser": "^4.15.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-config-standard-react": "^9.2.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.18.3",
    "eslint-plugin-standard": "^4.0.1",
    "prettier": "^1.19.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "typescript": "^4.2.4"
  },
  "resolutions": {
    "remark": "11.0.2"
  },
  "preconstruct": {
    "packages": [
      "design-system/packages/*"
    ]
  }
}
